{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/custom/addons.json",
    "description": "add-on that used to be hard-coded in layout files",
    "type": "object",
    "properties": {
        "waifuLive2D": {
            "type": "boolean",
            "description": "import live 2D waifu at your page's right-buttom",
            "default": false
        },
        "pageVisitCount": {
            "type": "string",
            "enum": ["busuanzi", "twikoo"],
            "description": "The visitor counter used in articles and pages",
            "default": "busuanzi"
        },
        "lazyload": {
            "$ref": "/custom/lazyload.json"
        },
        "pjax": {
            "type": "object",
            "description": "Enable pjax in this site (Experimental)",
            "properties": {
                "enable": {
                    "type": "boolean",
                    "description": "Total switch for PJAX supports",
                    "default": false
                },
                "js": {
                    "type": "string",
                    "description": "The URL or CDN to load pjax.js",
                    "default": "https://cdn.jsdelivr.net/npm/pjax@0.2.8/pjax.js"
                }
            },
        "backstretch": {
            "$ref": "/custom/backstretch.json"
        }
    }
}