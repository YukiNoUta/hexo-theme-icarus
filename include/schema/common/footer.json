{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/common/footer.json",
    "description": "Page footer configurations",
    "type": "object",
    "properties": {
        "links": {
            "$ref": "/misc/poly_links.json",
            "description": "Links to be shown on the right of the footer section",
            "examples": [
                {
                    "Creative Commons": {
                        "icon": "fab fa-creative-commons",
                        "url": "https://creativecommons.org/"
                    },
                    "Attribution 4.0 International": {
                        "icon": "fab fa-creative-commons-by",
                        "url": "https://creativecommons.org/licenses/by/4.0/"
                    },
                    "Download on GitHub": {
                        "icon": "fab fa-github",
                        "url": "https://github.com/ppoffice/hexo-theme-icarus"
                    }
                }
            ]
        },
        "content": {
            "type": "array",
            "description": "text and link to show at your site's buttom-left",
            "examples": [
                {
                    "href": "http://www.miitbeian.gov.cn",
                    "html": "萌ICP备1145141919810号"
                },
                "Nanami 酱满怀爱意而制作♥~"
            ]
        }
    }
}